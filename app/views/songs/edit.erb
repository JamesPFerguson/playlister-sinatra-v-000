<form action ="/songs/<%=@song.slug%>" method="POST">
  <label>Name:</label><input type="text" name="name" id="name" value="<%=@song.name%>"></input>
  <label>Artist Name:</label><input type="text" name="Artist Name" id="Artist Name" value="<%=@song.artist.name%>"></input>

<label> Choose Genres: </label>
  <br>

  <% @genres.each do |genre| %>

    <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>" <%= 'checked' if @song.genres.include?(genre)%>> <%=genre.name%></input>

    <%end%>

    <input type="submit" value="Update">
  </form>
